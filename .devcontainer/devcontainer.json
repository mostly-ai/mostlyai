{
  "name": "Python 3.10 with uv",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "postCreateCommand": "pip install uv && uv venv && .venv/bin/python -m pip install ipykernel && uv sync --extra dev",
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
      "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "kevinrose.vsc-python-indent",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
  "forwardPorts": [8000],
  "settings": {
    "python.pythonPath": "/workspaces/mostlyai/.venv/bin/python"
  }
}