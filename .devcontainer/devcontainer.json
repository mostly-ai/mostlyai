{
  "name": "Python 3.10 with uv",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "options": {
    "sdkMode": {
      "type": "string",
      "description": "SDK Mode",
      "default": "client",
      "enum": ["client", "local"],
      "enumDescriptions": [
        "Client mode: pure client mode.",
        "Local mode: additionally install `mostlyai-engine` and `mostlyai-qa`."
      ]
    }
  },
  "postCreateCommand": "/bin/bash -c 'source .devcontainer/setup.sh'",
  "containerEnv": {
    "UV_LINK_MODE": "copy",
    "SDK_MODE": "${sdkMode}"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "charliermarsh.ruff",
    "kevinrose.vsc-python-indent"
  ],
  "forwardPorts": [8000],
  "settings": {
    "python.defaultInterpreterPath": "/workspaces/mostlyai/.venv/bin/python",
    "jupyter.defaultKernel": "Python 3 (Dev Container)",
    "jupyter.jupyterServerType": "local",
    "python.terminal.activateEnvironment": true
  },
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        }
      }
    }
  }
}