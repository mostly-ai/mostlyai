{
  "name": "Python 3.10 with uv",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "postCreateCommand": "/bin/bash -c 'source .devcontainer/setup.sh'",
  "containerEnv": {
    "UV_LINK_MODE": "copy"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "charliermarsh.ruff",
    "kevinrose.vsc-python-indent",
    "yzhang.markdown-all-in-one"
  ],
  "forwardPorts": [
    8000
  ],
  "settings": {
    "python.defaultInterpreterPath": "/workspaces/mostlyai/.venv/bin/python",
    "jupyter.defaultKernel": "Python 3",
    "editor.defaultPreviewMode": true,
    "markdown.preview.openOnFileOpen": true,
    "workbench.editorAssociations": {
      "*.md": "markdown.preview.editor"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "docs/tutorials.md"
      ]
    }
  }
}